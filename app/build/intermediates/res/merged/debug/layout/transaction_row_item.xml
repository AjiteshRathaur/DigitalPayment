<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView  android:id="@+id/bookingHistoryIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/transaction_history_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout android:id="@+id/bookingHistoryPanel"
        android:orientation="vertical"
        android:layout_toRightOf="@id/bookingHistoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">


           <TextView
               android:id="@+id/bookedHistoryStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@android:color/black"
               android:textSize="15sp"
               android:text="Payment in Process"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bookedHistoryAmount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="1311"/>

            <TextView
                android:id="@+id/bookedHistorydateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="7th November 2016"
                android:layout_marginLeft="5dp"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/bookedHistoryCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="****1231"
            />


    </LinearLayout>


</RelativeLayout>
