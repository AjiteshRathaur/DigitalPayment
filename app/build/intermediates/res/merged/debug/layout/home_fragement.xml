<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mobile_payment"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/visa_paywave_1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile_payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="WELCOME TO PAYMENT "
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/pay_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/welcome_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/pay" />

    <ImageView
        android:id="@+id/scan_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/welcome_text"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/pay_icon"
        android:src="@drawable/scan" />

    <TextView
        android:id="@+id/touch_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Touch to pay "
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="normal|italic|bold" />

    <TextView
        android:id="@+id/scan_to_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_icon"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="5dp"
        android:text="Scan to pay "
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        android:textStyle="normal|italic|bold" />

</RelativeLayout>