<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dpouch.DeviceRegistration" >

    <TextView
        android:id="@+id/cardRegistrationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/title_register_card"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold|normal" />

    <EditText
        android:id="@+id/cardNum"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_spinner"
        android:gravity="left"
        android:hint="@string/card_num_txt"
        android:padding="4dp"
        android:singleLine="true"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal"
        android:layout_below="@id/cardRegistrationTxt"/>

    <EditText
        android:id="@+id/cvv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_spinner"
        android:gravity="left"
        android:hint="@string/cvv_text"
        android:padding="4dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal" 
        android:inputType="numberPassword"
        android:layout_below="@id/cardNum"/>
     <EditText
        android:id="@+id/NameOnCard"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_spinner"
        android:gravity="left"
        android:hint="@string/NameOnCard"
        android:padding="4dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal" 
        
        android:layout_below="@id/cvv"/>
    
    <TextView
                android:id="@+id/spinnerPickUpMonth"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient_spinner_card"
                android:text="Expiry month "
                android:textSize="15sp" 
                android:layout_below="@id/NameOnCard"/>
      <TextView
                android:id="@+id/spinnerPickUpYear"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient_spinner_card"
                android:text="Expiry year "
                android:textSize="15sp" 
                android:layout_below="@id/NameOnCard"
                android:layout_toRightOf="@id/spinnerPickUpMonth"/>
    
     <Button
            android:id="@+id/cardRegisterButton"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/spinnerPickUpMonth"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dip"
            android:background="@android:color/holo_orange_light"
            android:padding="4dp"
            android:text="Register"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold|normal" />

</RelativeLayout>