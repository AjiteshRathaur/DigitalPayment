<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dpouch.RegisterPhoneActivitySuccess" >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/creditcardscissors" />

    <TextView
        android:id="@+id/info_deregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="10dp"
        android:text="Deregistering the device also removes all your registered cards"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/askingsurity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_deregister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Are you  sure ?"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/yesButtonDisableDevice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/askingsurity"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:text="Yes" />

    <Button
        android:id="@+id/noButtonDisableDevice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/askingsurity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/yesButtonDisableDevice"
        android:background="@android:color/holo_blue_light"
        android:text="No" />

</RelativeLayout>