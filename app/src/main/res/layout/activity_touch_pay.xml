<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_touch_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dpouch.TouchPay">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
         android:layout_height="150dp"
        android:layout_width="match_parent">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textTouchTopay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the card to continue payment "
        android:layout_below="@id/viewPager"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPos"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/textTouchTopay"
        android:layout_marginTop="30dp"
        android:text="*POS terminal needs to be enabled for  contactless payments"
        />


    <TextView android:id="@+id/textInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPos"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:text="Do you wish to pay $ "/>
    <TextView android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/textInfoTxt"/>


    <TextView android:id="@+id/textTapTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInfo"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"
        android:text="Please tap your phone on the NFC enabled POS device "/>

</RelativeLayout>
